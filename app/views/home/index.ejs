            <div class="card-body d-flex flex-column align-items-start">
              <h3 class="mb-0">
                <a class="text-dark" href="#"><%=data.name%>, <%=data.sys.country%></a>
                <img src="<%=icon%>" alt="" style="width: 120px; height: 120px;">
              </h3>
              <!-- <div class="mb-1 text-muted">date_now</div> -->
              <h5 class="card-text mb-auto">Temperatura: <%=Math.round(data.main.temp)%> °C</h5>
              <h5 class="card-text mb-auto">Umidade: <%=data.main.humidity%>% </h5>
              <h5 class="card-text mb-auto">Clima: <%=data.weather[0].description %></h5>      
                  
