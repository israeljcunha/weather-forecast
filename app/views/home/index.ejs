      <div class="row">
        <div class="col-sm-4">
          <form action="/" method="post">
            <div class="form-inline">
              <div class="col-7">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="city" id="city">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
              </div>
            </div>
          </form>
          
          <br>

